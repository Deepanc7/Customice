<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/system_accent3_100">

    <TextView
        android:id="@+id/icecream_type"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/basic"
        android:text="Select your Ice-Cream Type"
        android:textAppearance="@style/TextAppearance.AppCompat.Large"
        android:textSize="24sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.024" />

    <ImageButton
        android:id="@+id/cone_button"
        android:layout_width="258dp"
        android:layout_height="231dp"
        android:adjustViewBounds="true"
        android:background="@android:color/system_accent3_100"
        android:contentDescription="Cone"
        android:scaleType="fitCenter"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/icecream_type"
        app:layout_constraintVertical_bias="0.071"
        app:srcCompat="@drawable/icecream_cone" />

    <ImageButton
        android:id="@+id/cup_button"
        android:layout_width="324dp"
        android:layout_height="240dp"
        android:adjustViewBounds="true"
        android:background="@android:color/system_accent3_100"
        android:contentDescription="Cup"
        android:scaleType="fitCenter"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/cone_button"
        app:layout_constraintVertical_bias="0.254"
        app:srcCompat="@drawable/icecream_cup" />

